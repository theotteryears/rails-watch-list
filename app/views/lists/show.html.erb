<div class="container mt-3">

  <h1 class="text-center"><%= @list.name %></h1>

  <div class="container text-center">
    <%= link_to "Add a new movie", new_list_bookmark_path(@list), class: "btn btn-primary m-3" %>
  </div>

  <div class="container">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="card m-3 p-3 text-center">
          <img src=<%= bookmark.movie.poster_url %> width="200" height="300">
          <br><%= bookmark.movie.title %>
          <%= bookmark.movie.rating %>⭐️
          <br><%= bookmark.movie.overview %>

          <%= link_to bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
          <i class="fa-solid fa-trash"></i>
          <% end %>
        </div>
      <% end %>

  </div>

  <div class="text-center p-3">
    <%= link_to "Back to lists", lists_path %>
  </div>

</div>
